{{#if isProfilePage}}
<div class="d-lg-flex sb-left_profile d-xm-none d-none flex-column p-2">
    <div class="d-flex flex-column align-items-center justify-content-center sb-left-header">
        {{#if currentProfile.fullname}}
        <img src='{{#each currentProfile}}{{avatar}}{{/each}}' alt="avatar" width="100" height="100"
            class="rounded-circle m-3">
        {{else}}
        <img src='../../../image/tdt.jpg' alt="avatar" width="100" height="100" class="rounded-circle m-3">
        {{/if}}
        <p class="text-white"><strong>{{{currentProfile.fullname}}}{{{currentProfile.username}}}</strong></p>
    </div>
    <hr>
    <div>
        {{#if currentProfile}}
        <ul class="list-group">
            <li class="list-group-item">
                <div class="row p-1">
                    <div class="col-2 d-flex justify-content-center align-items-center">
                        <span class="material-icons-outlined">
                            class
                        </span>
                    </div>
                    <div class="col-10">
                        <p class="m-0"><strong>{{{currentProfile.class}}} 18H050201</strong>
                        </p>
                        <small>Class</small>
                    </div>
                </div>
            </li>
            <li class="list-group-item">
                <div class="row p-1">
                    <div class="col-2 d-flex justify-content-center align-items-center">
                        <span class="material-icons-outlined">
                            screen_lock_portrait
                        </span>
                    </div>
                    <div class="col-10">
                        <p class="m-0"><strong>{{currentProfile.role}}</strong></p>
                        <small>Role</small>
                    </div>
                </div>
            </li>
            <li class="list-group-item">
                <div class="row p-1">
                    <div class="col-2 d-flex justify-content-center align-items-center">
                        <span class="material-icons-outlined">
                            toc
                        </span>
                    </div>
                    <div class="col-10">
                        <p class="m-0"><strong>{{currentProfile.faculty}} Công Nghệ Thông Tin</strong></p>
                        <small>Faculty</small>
                    </div>
                </div>
            </li>
        </ul>
        {{/if}}
    </div>
</div>
{{else}}
<div class="d-lg-flex sb-left d-xm-none d-none flex-column p-2">
    <div class="d-flex flex-column align-items-center sb-left-header">
        <img src='{{#each user}}{{#if username}}../../../{{avatar}}{{else}}{{avatar}}{{/if}}{{/each}}' alt="avatar"
            width="100" height="100" class="rounded-circle m-3">
        <p class="text-white">
            <strong>
                {{#each user}}
                {{#if username}}
                {{username}}
                {{else}}
                {{fullname}}
                {{/if}}
                {{/each}}
            </strong>
        </p>

    </div>
