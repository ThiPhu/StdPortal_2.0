<div class="d-lg-flex sb-left d-xm-none d-none flex-column p-3">
    <div class="d-flex me-3 flex-column align-items-center sb-left-header">
        <img src='{{#each user}}{{avatar}}{{/each}}' alt="avatar" width="100" height="100" class="rounded-circle me-2">
        {{#each user}}
        {{#if username}}
        {{username}}
        {{else}}
        {{fullname}}
        {{/if}}
        {{/each}}
    </div>
    <hr>
    <ul class="nav nav-pills flex-column mb-auto">
        <li class="nav-item sb-left-link">
            <a href="/" class="nav-link d-flex justify-content-start" aria-current="page">
                Trang chủ
            </a>
        </li>

        {{!-- Nếu là admin sẽ hiện trang quản lý --}}
        {{#if admin}}
        <li class="nav-item sb-left-link">
            <a href="#collapseManagement" role="button" class="nav-link d-flex justify-content-start"
                data-bs-toggle="collapse" aria-expanded="false" aria-controls="collapseManagement">
                Quản lý người dùng
            </a>
            <div class="collapse" id="collapseManagement">
                <div class="">
                    <button class="d-flex justify-content-start sb-left-content" type="button"
                        data-bs-target="#carouselManagement" data-bs-slide="prev">
                        <a href="/management">Học viên</a>
                    </button>
                </div>
                <div class="">
                    <button class="d-flex justify-content-start sb-left-content" type="button"
                        data-bs-target="#carouselManagement" data-bs-slide="next">
                        <a href="/management">Phòng/Khoa</a>
                    </button>
                </div>
                <div class="">
                    <button class="d-flex justify-content-start sb-left-content" type="button">
                        <a href="#">Tạo tài khoản Phòng/Khoa</a>
                    </button>
                </div>
            </div>
        </li>
        {{/if}}

    </ul>
</div>