{{> header}}
<div class="container">
    <div class="d-flex row flex-row">

        {{!-- Side bar left --}}
        <div class="col-lg-3 col-3">
            {{> sidebar_left}}
        </div>
        {{!-- Chứa tất cả các post --}}
        {{#if isAnnoucePages}}
        {{!-- Trang thông báo --}}
        <div class="col-lg-9">
            {{> announcement_middle}}
        </div>
        {{else}}
        {{!-- Trang bài viết --}}
        <div class="col-lg-6">
            {{> post_middle}}
        </div>
        {{!-- Side bar right --}}
        <div class="col-lg-3">
            {{> sidebar_right}}
        </div>
        {{/if}}
    </div>
</div>