{{> header}}
{{#if announce}}
<div class="announce_id announces_container container d-lg-flex flex-column col-12 p-0 mb-4" data-announceid="{{_id}}">
    {{!-- Annoucement header - Hiển thị tên chủ bài viết và ngày đăng --}}
    <div class="post_header col-12 mt-3">
        <div class="d-flex row">
            <a class="col-lg-1 col-2 d-flex align-items-center justify-content-end" href="/profile/{{user._id}}">
                <img src='{{announce.user.avatar}}' alt="avatar" width="50" height="50"
                    class="img-fluid post-comments_avatar">
            </a>
            <a class="row post_header-userInfo col-9 col-lg-9 d-flex align-items-center justify-content-center p-0"
                href="/profile/{{announce.user._id}}">
                <div class="p-2 bd-highlight">
                    <div>
                        <strong>
                            {{announce.user.fullname}}
                        </strong>
                        {{#if announce.isUpdated}}<span class="small">(Thông báo đã cập nhật)</span>{{/if}}
                    </div>
                    <div class="small">
                        {{announce.create_date}} at {{announce.create_time}}
                    </div>
                </div>
            </a>
            <a href="/announcements" class="col d-flex justify-content-center align-items-center announce_header-items">
                <div class="d-flex justify-content-center align-items-center announce_backward-icon">
                    <span class="material-icons-outlined">
                        reply
                    </span>
                </div>
            </a>
        </div>
    </div>
    {{!-- Phần hiển thị nội dung thông báo --}}
    <div class="post_body col-12 mb-3">
        {{!-- Announce Head --}}
        <div class="d-flex flex-column col-12 mt-3">
            <div class="d-flex col-12 justify-content-start align-items-center announce_header-title">
                <h3>{{{announce.title}}}</h3>
            </div>
        </div>
        {{!-- Announce body --}}
        <div class="d-flex flex-column col-12 mt-3">
            <div id="announce_content_{{_id}}" class="col-12 announce_body-content">
                {{{announce.content}}}
            </div>
        </div>
        <div class="d-flex flex-column col-12 mt-3">
            <div class="col-12 announce_body-content announce_content-lineclamp">
                <strong>Phòng ban: </strong> {{{announce.sections.name}}}
            </div>
        </div>
    </div>
</div>
{{/if}}