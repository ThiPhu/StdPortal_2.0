{{> header}}
<div class="container">
    <div class="d-flex row flex-row">
        {{!-- Side bar left --}}
        <div class="col-lg-3">
            {{> sidebar_left}}
        </div>

        {{!-- Main post --}}
        <div class="col-lg-9">
            <div class="d-lg-flex flex-column">
                <h1 class="d-flex align-items-center justify-content-center">Quản lý người dùng</h1>
                <div class="d-flex align-items-center justify-content-center d-lg-none m-3">
                    <div class="d-flex align-items-center justify-content-center">
                        <button class="btn" type="button" data-bs-target="#carouselManagement" data-bs-slide="prev">
                            Học viên
                        </button>
                    </div>
                    <div class="d-flex align-items-center justify-content-center">
                        <button class="btn" type="button" data-bs-target="#carouselManagement" data-bs-slide="next">
                            Phòng/Khoa
                        </button>
                    </div>
                </div>
                <div class="d-none align-items-center justify-content-center d-lg-flex m-3">
                    <div class="d-flex align-items-center justify-content-center mngt-btn-carousel">
                        <button class="btn" type="button" data-bs-target="#carouselManagement" data-bs-slide="prev">
                            Học viên
                        </button>
                    </div>
                    <div class="d-flex align-items-center justify-content-center mngt-btn-carousel">
                        <button class="btn" type="button" data-bs-target="#carouselManagement" data-bs-slide="next">
                            Phòng/Khoa
                        </button>
                    </div>
                </div>
                {{!-- Carousel --}}
                <div id="carouselManagement" data-bs-wrap="false" data-bs-interval="false" class="carousel slide"
                    data-bs-ride="carousel">
                    <div class="carousel-inner">
                        {{!-- Student Carousel --}}
                        <div class="carousel-item active">
                            <div class="row">
                                <div class="col-lg-12">
                                    <h5>Thông tin các Học viên</h5>
                                </div>
                            </div>
                            <hr>
                            {{!-- Table if large screen --}}
                            <div class="d-lg-flex d-none table-responsive">
                                <table class="table table-hover" style="overflow: hidden;">
                                    <thead>
                                        <tr class="admin_tr_mgmt">
                                            <th scope="col">Avatar</th>
                                            <th scope="col">Họ tên</th>
                                            <th scope="col">Vai trò</th>
                                            <th scope="col">Khoa</th>
                                            <th scope="col">Lớp</th>
                                            <th scope="col">Tương tác</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each student}}
                                        <tr class="admin_tr_mgmt" style="font-size: 18px;">
                                            <td>
                                                <div>
                                                    <img src="{{avatar}}" alt="Avatar" class="admin_avatar_mgmt">
                                                </div>
                                            </td>
                                            <td>
                                                <div>{{fullname}}</div>
                                            </td>
                                            <td>
                                                <div>Học viên</div>
                                            </td>
                                            <td class="admin_td_faculty">
                                                <div>{{faculty}}</div>
                                            </td>
                                            <td class="admin_td_topic">
                                                <div>
                                                    {{class}}
                                                </div>
                                            </td>
                                            <td>
                                                <div class="row container">
                                                    <div class="col-6 mngt-act-btn mngt-profile-user"
                                                        data-bs-toggle="tooltip" title="Xem trang người dùng">
                                                        <a class="m-3 d-flex justify-content-center"
                                                            href="/api/user/{{fullname}}">
                                                            <span class="material-icons-outlined">
                                                                account_circle
                                                            </span>
                                                            <p class="m-0 ms-2">Profile</p>
                                                        </a>
                                                    </div>
                                                    <div class="col-6 mngt-act-btn mngt-del-user"
                                                        data-bs-toggle="tooltip" title="Xoá người dùng">
                                                        <a class="m-3 d-flex justify-content-center" href="#">
                                                            <span class="material-icons-outlined">
                                                                delete
                                                            </span>
                                                            <p class="m-0 ms-2">Delete</p>
                                                        </a>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                            {{!-- Using card for mobile --}}
                            <div class="d-lg-none d-flex">
                                <div class="card-group">
                                    <div class="card mb-3">
                                        <img src="/image/stu.png" class="img-fluid card-img-top" alt="...">
                                        <div class="card-body">
                                            <h5 class="card-title">Card title</h5>
                                            <p class="card-text">This is a wider card with supporting text below as a
                                                natural lead-in to additional content. This content is a little bit
                                                longer.</p>
                                            <p class="card-text"><small class="text-muted">Last updated 3 mins
                                                    ago</small></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        {{!-- Faculty Carousel --}}
                        <div class="carousel-item">
                            <div class="row">
                                <div class="col-lg-6 col-12">
                                    <h5>Thông tin các Phòng/Khoa</h5>
                                </div>
                                <div class="col-lg-6 col-12 d-flex justify-content-end">
                                    <button type="button" class="btn btn-primary d-flex">
                                        <span class="material-icons-outlined">
                                            add
                                        </span>
                                        Tạo phòng/khoa
                                    </button>
                                </div>
                            </div>
                            <hr>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr class="admin_tr_mgmt">
                                            <th scope="col">Avatar</th>
                                            <th scope="col">Tên đăng nhập</th>
                                            <th scope="col">Vai trò</th>
                                            <th scope="col">Khoa</th>
                                            <th scope="col">Chủ đề</th>
                                            <th scope="col">Tương tác</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each faculty}}
                                        <tr class="admin_tr_mgmt" style="font-size: 18px;">
                                            <td>
                                                <div>
                                                    <img src="{{avatar}}" alt="Avatar" class="admin_avatar_mgmt">
                                                </div>
                                            </td>
                                            <td>
                                                <div>{{username}}</div>
                                            </td>
                                            <td>
                                                <div>Phòng/Khoa</div>
                                            </td>
                                            <td class="admin_td_faculty">
                                                <div>{{faculty}}</div>
                                            </td>
                                            <td class="admin_td_topic">
                                                <div>
                                                    {{class}}
                                                </div>
                                            </td>
                                            <td>
                                                <a class="me-3" href="/api/user/{{username}}"
                                                    style="cursor:pointer; color: green;">
                                                    <span class="material-icons-outlined" data-bs-toggle="tooltip"
                                                        title="Profile">
                                                        account_circle
                                                    </span>
                                                </a>
                                                <a class="me-3" href="#" style="cursor:pointer; color: red">
                                                    <span class="material-icons-outlined" data-bs-toggle="tooltip"
                                                        title="Xoá người dùng">
                                                        delete
                                                    </span>
                                                </a>
                                                <a class="me-3" href="#" style="cursor:pointer; color: coral">
                                                    <span class="material-icons-outlined" data-bs-toggle="tooltip"
                                                        title="Cấp quyền chủ đề">
                                                        topic
                                                    </span>
                                                </a>
                                            </td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

